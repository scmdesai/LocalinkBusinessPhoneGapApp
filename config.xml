	<param name="APP_ID" value="900651756709444" />
	<param name="APP_NAME" value="LocalLink For Business" />
    </gap:plugin>
	<!-- New PhoneGap Plugins -->
	<gap:plugin name="cordova-plugin-battery-status" source="npm" version="1.1.0" />
