	<!-- Plugin Added for Geolocation -->
	<gap:plugin name="cordova-plugin-geolocation"  source="npm" version="1.0.1"/>
	<!-- End Geolocation -->
	<!--social sharing -->
	<gap:plugin name="cordova-plugin-x-socialsharing" source="npm" />

	
